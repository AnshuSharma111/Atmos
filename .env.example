# Example Environment Variables
# Copy this file to .env.local for local development
# Copy this file to .env.production for deployment

# Server Configuration
NODE_ENV=development
PORT=3001

# Server URL - Update based on your environment
# Local: http://localhost:3001 or http://YOUR_LOCAL_IP:3001
# Production: https://your-deployed-url.com
SERVER_URL=http://localhost:3001

# WebRTC Configuration
STUN_SERVER_1=stun:stun.l.google.com:19302
STUN_SERVER_2=stun:stun1.l.google.com:19302

# Logging
LOG_LEVEL=debug
VERBOSE_LOGGING=true

# Frontend Configuration (auto-detected, usually not needed)
# VIEWER_BACKEND_URL=http://localhost:3001
